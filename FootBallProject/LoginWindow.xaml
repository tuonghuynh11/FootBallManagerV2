<Window x:Class="FootBallProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootBallProject"
        xmlns:component="clr-namespace:FootBallProject.Component.Login"
        d:DataContext="{StaticResource LoginViewM}"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        AllowDrop="True"
        mc:Ignorable="d"
         Height="450" Width="380" Icon="/Icons/appicon.png">
    <Grid>
        <Grid.Resources>
            <component:Login x:Key="Default"></component:Login>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentView}"></ContentControl>
    </Grid>
</Window>
