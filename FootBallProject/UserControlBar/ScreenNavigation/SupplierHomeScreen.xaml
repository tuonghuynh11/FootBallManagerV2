<UserControl x:Class="FootBallProject.UserControlBar.ScreenNavigation.SupplierHomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FootBallProject.UserControlBar.ScreenNavigation"
             mc:Ignorable="d" 
             
 
             
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
             xmlns:convert ="clr-namespace:FootBallProject.Class"
             DataContext="{StaticResource SupplierHomeScreenkVM}"
              Style="{StaticResource Page_Style}"   
            FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="720" d:DesignWidth="1290" Loaded="UserControl_Loaded"
            >
    <UserControl.Resources>
        <convert:ConvertByteArrToImage x:Key="imageconvert"/>
       
    </UserControl.Resources>
    <Grid Background="#D0D6DB">
        <Grid Margin="50 0 0 0"  Background="#D0D6DB">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" >
                <TabControl Padding="0 0 0 0" Margin="0 0 0 0"  >
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border
                              Name="Border"
                              Margin="2,0"
                              BorderBrush="Gainsboro"
                              BorderThickness="1,1,1,0"
                              CornerRadius="0,0,4,4">
                                            <ContentPresenter
                                  x:Name="ContentSite"
                                  Margin="10,2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  ContentSource="Header" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF61C0FA" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Header="Danh sách" FontWeight="Bold" VerticalAlignment="Center" Height="19" HorizontalAlignment="Left">
                        <Grid  Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="880"/>
                                <ColumnDefinition Width="171*"/>
                                <ColumnDefinition Width="14*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Border Background="White" CornerRadius="10" Margin="10" Padding="0 20 0 0">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Đã ký hợp đồng" FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <DockPanel Margin="10 0 0 0">
                                            <Button  x:Name="refreshBtn"
                                                     Background="#F0CF7A"
                                                     Style="{StaticResource PrimaryButton}"
                                                     Width="120"
                                                     ToolTip="Lưu" 
                                                     RenderTransformOrigin="-0.35,0.314" Content="Update data"
                                                     HorizontalAlignment="Right" Click="refreshBtn_Click"
                                                     />
                                            <Border Width="170"   HorizontalAlignment="Right" VerticalAlignment="Center"  Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="10" Padding="5 10 5 5">
                                                <TextBox x:Name="searchTextBox" Style="{DynamicResource  MaterialDesignFloatingHintTextBox}" 
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 MaxLines="1"
                                                 Width="150"
                                                 Margin="5 -10 10 0"
                                                 FontSize="14"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" TextChanged="searchTextBox_TextChanged"
                                                 >
                                                    <materialDesign:HintAssist.Hint>
                                                        <StackPanel Orientation="Horizontal" Margin="-2 0 0 0" >
                                                            <materialDesign:PackIcon Kind="Search" />
                                                            <TextBlock Margin="5 0 0 0">
                                                            Tìm kiếm
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:HintAssist.Hint>
                                                </TextBox>

                                            </Border>

                                        </DockPanel>
                                        <Border  BorderBrush="Black" Background="#31AC4C" BorderThickness="3" CornerRadius="10" Margin="10" Padding="4 1.5 4 0">
                                            <DataGrid x:Name="DTG_SupplierContracted"  IsReadOnly="True"
                                                      Height="500"
                                                      d:ItemsSource="{d:SampleData ItemCount=10}"
                                                    ItemsSource="{Binding FootBallTeamsCooperated, UpdateSourceTrigger=PropertyChanged,NotifyOnSourceUpdated=True}"
                                                  Background="White" RenderTransformOrigin="0.494,0.52"
                                                  CanUserAddRows="False" ScrollViewer.CanContentScroll="True"
                                                  AutoGenerateColumns="False" VerticalAlignment="Top"
                                                      CanUserSortColumns="True"
                                                    SelectionUnit="FullRow"
                                                  ScrollViewer.VerticalScrollBarVisibility="Hidden" >
                                               
                                                <DataGrid.Resources>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="Background" Value="#31AC4C"/>
                                                        <Setter Property="Height" Value="33"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                        
                                                    </Style>
                                                    

                                                    <!--<Style TargetType="DataGridRow">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Age}" Value="True">
                                                                <Setter Property="Background" Value="LightGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>-->

                                                </DataGrid.Resources>
                                                <DataGrid.RowStyle>
                                                    <Style TargetType="DataGridRow">
                                                        <Setter Property="Background" Value="{Binding statusColor}" />
                                                    </Style>
                                                </DataGrid.RowStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Header="Tên đội bóng" Width="200"  IsReadOnly="True" CanUserSort="True" SortMemberPath="DOIBONG.TEN">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate >
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Source="{Binding DOIBONG.HINHANH, Converter={StaticResource ResourceKey=imageconvert } }" DockPanel.Dock="Left" Width="30" Height="30"></Image>
                                                                    <Separator Background="Transparent" Width="20" Foreground="Transparent" BorderBrush="Transparent" BorderThickness="0"></Separator>
                                                                    <TextBlock  Text="{Binding DOIBONG.TEN}" VerticalAlignment="Center"></TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn Header="Ngày bắt đầu" Width="155" Binding="{Binding startDate, StringFormat=d}" CanUserSort="True" SortMemberPath="startDate">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <DataGridTemplateColumn Header="Ngày kết thúc" Width="155" CanUserSort="True" SortMemberPath="endDate">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding endDate, StringFormat=d}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn Header="Thời hạn" Width="155" Binding="{Binding durationString}" CanUserSort="True" SortMemberPath="durationString">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />

                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                    <DataGridTextColumn Header="Trạng thái" Width="150" Binding="{Binding statusString}" CanUserSort="True" SortMemberPath="statusString">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Border>
                                    </StackPanel>

                                </Border>
                            </Grid>

                            <Grid Grid.Column="1" Grid.ColumnSpan="2">
                                <Border Background="White" CornerRadius="10" Margin="10" Padding="0 20 0 0">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Chưa ký hợp đồng" FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <Border     VerticalAlignment="Center"  Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="10" Padding="5 10 5 5">
                                            <TextBox x:Name="tb_UnCooperateTeams_Search" Style="{DynamicResource  MaterialDesignFloatingHintTextBox}" 
                                                 VerticalAlignment="Center"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 Width="340"
                                                 HorizontalAlignment="Left"
                                                    MaxLines="1" 
                                                 Margin="5 -10 10 0"
                                                 FontSize="14"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" TextChanged="tb_UnCooperateTeams_Search_TextChanged"
                                          >
                                                <materialDesign:HintAssist.Hint>
                                                    <StackPanel Orientation="Horizontal" Margin="-2 0 0 0" >
                                                        <materialDesign:PackIcon Kind="Search" />
                                                        <TextBlock Margin="5 0 0 0">
                                                            Tìm kiếm
                                                        </TextBlock>
                                                    </StackPanel>
                                                </materialDesign:HintAssist.Hint>
                                            </TextBox>

                                        </Border>
                                        <ListView  x:Name="lvUnCooperateFootBallTeams"  ItemsSource="{Binding FootBallTeamsUnCooperate}" IsHitTestVisible="True" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Background="Transparent" BorderBrush="Transparent" Margin="5,10,5,10"   d:ItemsSource="{d:SampleData ItemCount=10}" Height="530" >
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="Focusable" Value="True"/>
                                                </Style>

                                            </ListView.ItemContainerStyle>
                                            <ListView.Resources>
                                                <Style TargetType="ListViewItem">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                            <Setter Property="IsSelected" Value="True"/>
                                                        </Trigger>
                                                    </Style.Triggers>

                                                </Style>
                                            </ListView.Resources>
                                            <ListView.ItemTemplate >
                                                <DataTemplate>
                                                    <DockPanel Margin="10 10 10 10" Width="330">
                                                        <Image DockPanel.Dock="Left" Source="{Binding HINHANH , Converter= {StaticResource ResourceKey=imageconvert}}" Margin="0 0 10 0" Width="45" Height="50"  >
                                                        </Image>
                                                        <Label DockPanel.Dock="Left" Margin="0 0 10 0"  Foreground="#979FA7" VerticalAlignment="Center"  Content="{Binding TEN}" FontSize="10" Width="90"></Label>

                                                        <Button
                                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                                        Width="110"
                                                        Click="Send_Offer"
                                                        materialDesign:RippleAssist.Feedback="#DD000000">
                                                            Gửi yêu cầu
                                                            
                                                        </Button>

                                                    </DockPanel>

                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                        </ListView>
                                    </StackPanel>

                                </Border>
                            </Grid>
                        </Grid>

                    </TabItem>
                    <TabItem Header="Đang chờ"  FontWeight="Bold" Height="24" HorizontalAlignment="Right">
                        <Grid Background="#D0D6DB">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Background="White" Width="1000" CornerRadius="10" Margin="10 10 10 20" Padding="0 20 0 0">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="Danh sách chờ" FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Border  BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="10" Padding="2">
                                        <DataGrid x:Name="DTG_wait" IsReadOnly="True"
                                          d:ItemsSource="{d:SampleData ItemCount=10}"
                                         Background="White" RenderTransformOrigin="0.494,0.52"
                                         CanUserAddRows="False" ScrollViewer.CanContentScroll="True"
                                         AutoGenerateColumns="False" VerticalAlignment="Top"
                                         ScrollViewer.VerticalScrollBarVisibility="Hidden" >
                                            <DataGrid.Resources>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="Background" Value="#31AC4C"/>
                                                    <Setter Property="Height" Value="33"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                </Style>
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Tên đội bóng" Width="200"  IsReadOnly="True">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate >
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="{Binding HINHANHDOIMUA, Converter={StaticResource ResourceKey=imageconvert } }" DockPanel.Dock="Left" Width="30" Height="30"></Image>
                                                                <Separator Background="Transparent" Width="20" Foreground="Transparent" BorderBrush="Transparent" BorderThickness="0"></Separator>
                                                                <TextBlock  Text="{Binding TENDOIMUA}" VerticalAlignment="Center"></TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTextColumn Header="Ngày bắt đầu" Width="155" Binding="{Binding Name}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>

                                                <DataGridTemplateColumn Header="Ngày kết thúc" Width="155">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Dateofbirth, StringFormat=d}" HorizontalAlignment="Center"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                    <DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <DatePicker SelectedDate="{Binding Dateofbirth}"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellEditingTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Thời hạn" Width="155" Binding="{Binding Position}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Trạng thái" Width="190" Binding="{Binding Mailcontact}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>

                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </StackPanel>

                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>


        </Grid>

    </Grid>
</UserControl>
