<UserControl x:Class="FootBallProject.UserControlBar.ScreenNavigation.SupplierOfFootballTeam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FootBallProject.UserControlBar.ScreenNavigation"
             mc:Ignorable="d" 
             
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
   TextElement.Foreground="{DynamicResource MaterialDesignBody}"
   TextElement.FontWeight="Regular"
   TextElement.FontSize="13"
   TextOptions.TextFormattingMode="Ideal"
   TextOptions.TextRenderingMode="Auto"
    xmlns:convert ="clr-namespace:FootBallProject.Class"
    DataContext="{StaticResource SupplierOfFootBallTeamVM}"
     Style="{StaticResource Page_Style}"   
   FontFamily="{DynamicResource MaterialDesignFont}"
              d:DesignHeight="720" d:DesignWidth="1290">
    <UserControl.Resources>
        <convert:ConvertByteArrToImage x:Key="imageconvert"/>

    </UserControl.Resources>
    <Grid Background="#D0D6DB">
        <Grid Margin="50 0 0 0"  Background="#D0D6DB">
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"  Background="White" CornerRadius="10" Margin="10 10 10 0">
                <Grid >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition ></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" CornerRadius="200" Width="200" Height="200" BorderBrush="Black" BorderThickness="1" Margin="10">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding supplierInfo.images,Converter={StaticResource ResourceKey=imageconvert }}" ></ImageBrush>

                            </Border.Background>
                        </Border>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Border  Grid.Row="0" BorderThickness="0 0 0 0" BorderBrush="AntiqueWhite">

                                <Border  BorderBrush="AntiqueWhite" BorderThickness="0 0 0 0">
                                    <StackPanel Orientation="Vertical"  Width="400" Margin="0 20 20 0" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15"  >
                                            <Label FontSize="20" FontWeight="Bold" Foreground="Black">Tên công ty:</Label>
                                            <TextBlock  Margin="40 0 0 0" Foreground="Orange" x:Name="Nametbl" Text = "{Binding supplierInfo.supplierName, Mode=TwoWay,NotifyOnSourceUpdated=True}" FontSize="20" VerticalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                            <Label FontSize="20" FontWeight="Bold" Foreground="Black">Địa chỉ:</Label>
                                            <TextBlock x:Name="Addresstbl" Margin="30 0 0 0" Foreground="Orange" Text = "{Binding supplierInfo.addresss}" FontSize="20" VerticalAlignment="Center"></TextBlock>

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                            <Label FontSize="20" FontWeight="Bold" Foreground="Black">Số điện thoại:</Label>
                                            <TextBlock x:Name="PhoneNumbertbl" Margin="30 0 0 0" Foreground="Orange"  FontSize="20" Text = "{Binding supplierInfo.phoneNumber}" VerticalAlignment="Center"></TextBlock>

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                            <Label FontSize="20" FontWeight="Bold" Foreground="Black">Ngày thành lập:</Label>
                                            <TextBlock x:Name="Establishtbl" Margin="10 0 0 0" Foreground="Orange" FontSize="20" Text = "{Binding supplierInfo.establishDate,StringFormat=d}" VerticalAlignment="Center"></TextBlock>

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                            <Label FontSize="20" FontWeight="Bold" Foreground="Black">Người đại diện:</Label>
                                            <TextBlock x:Name="Representertbl" Margin="10 0 0 0" Foreground="Orange" Text = "{Binding supplierInfo.representativeName}" FontSize="20" VerticalAlignment="Center"></TextBlock>

                                        </StackPanel>
                                    </StackPanel>
                                </Border>



                            </Border>

                        </Grid>
                        <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 0">
                            <Label  HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" FontWeight="Bold" Foreground="Black">Các dịch vụ:</Label>
                            <ListView  x:Name="lsService" HorizontalAlignment="Center" Grid.Row="1" Width="380" Height="170"  d:ItemsSource="{d:SampleData ItemCount=10}" ItemsSource="{Binding supplierService}" IsHitTestVisible="True" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="Transparent" BorderBrush="Transparent" Margin="10" Padding="5">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Focusable" Value="False"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate >
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border CornerRadius="100" Width="100" Height="100" BorderBrush="Black" BorderThickness="1" Margin="10">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding images,Converter={StaticResource ResourceKey=imageconvert}}" ></ImageBrush>

                                                </Border.Background>
                                            </Border>
                                            <Label HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black" Content="{Binding serviceName}"></Label>

                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>

                    </Grid>





                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="15 10 15 0" >
                <TabControl Padding="0 0 0 0" Margin="0 0 0 0"  >
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border
                           Name="Border"
                           Margin="2,0"
                           BorderBrush="Gainsboro"
                           BorderThickness="1,1,1,0"
                           CornerRadius="0,0,4,4">
                                            <ContentPresenter
                               x:Name="ContentSite"
                               Margin="10,2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               ContentSource="Header" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF61C0FA" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Header="Danh sách" FontWeight="Bold" VerticalAlignment="Center" Height="19" HorizontalAlignment="Left">
                        <Grid  Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="21*" />
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="589*"/>
                                    <ColumnDefinition Width="16*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="White"  CornerRadius="10" Margin="100,10,68,6" Padding="60 20 60 0" Height="400">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Đã ký hợp đồng" FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <DockPanel Margin="10 -40 0 0">
                                            <Button  x:Name="refreshBtn"
                                                  Background="#F0CF7A"
                                                  Style="{StaticResource PrimaryButton}"
                                                  Width="120"
                                                  ToolTip="Lưu" 
                                                  RenderTransformOrigin="-0.35,0.314" Content="Update data"
                                                  HorizontalAlignment="Right" Click="refreshBtn_Click"
                                                  />
                                            <Border Width="170"   HorizontalAlignment="Right" VerticalAlignment="Center"  Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="10" Padding="5 10 5 5">
                                                <TextBox x:Name="searchTextBox" Style="{DynamicResource  MaterialDesignFloatingHintTextBox}" 
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              AcceptsReturn="True"
                                              TextWrapping="Wrap"
                                              MaxLines="1"
                                              Width="150"
                                              Margin="5 -10 10 0"
                                              FontSize="14"
                                              materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" TextChanged="searchTextBox_TextChanged"
                                              >
                                                    <materialDesign:HintAssist.Hint>
                                                        <StackPanel Orientation="Horizontal" Margin="-2 0 0 0" >
                                                            <materialDesign:PackIcon Kind="Search" />
                                                            <TextBlock Margin="5 0 0 0">
                                                         Tìm kiếm
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:HintAssist.Hint>
                                                </TextBox>

                                            </Border>

                                        </DockPanel>
                                        <Border  BorderBrush="Black" Background="#31AC4C" BorderThickness="3" CornerRadius="10" Margin="10" Padding="4 1.5 4 0">
                                            <DataGrid x:Name="DTG_SupplierContracted"  IsReadOnly="True"
                                                   Height="275"
                                                   d:ItemsSource="{d:SampleData ItemCount=10}"
                                                 ItemsSource="{Binding SuppliersCooperated, UpdateSourceTrigger=PropertyChanged,NotifyOnSourceUpdated=True}"
                                               Background="White" RenderTransformOrigin="0.494,0.52"
                                               CanUserAddRows="False" ScrollViewer.CanContentScroll="True"
                                               AutoGenerateColumns="False" VerticalAlignment="Top"
                                                   CanUserSortColumns="True"
                                                 SelectionUnit="FullRow"
                                               ScrollViewer.VerticalScrollBarVisibility="Hidden" SelectionChanged="DTG_SupplierContracted_SelectionChanged"  >

                                                <DataGrid.Resources>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="Background" Value="#31AC4C"/>
                                                        <Setter Property="Height" Value="33"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>

                                                    </Style>


                                                    <!--<Style TargetType="DataGridRow">
                                                     <Style.Triggers>
                                                         <DataTrigger Binding="{Binding Age}" Value="True">
                                                             <Setter Property="Background" Value="LightGreen" />
                                                         </DataTrigger>
                                                     </Style.Triggers>
                                                 </Style>-->

                                                </DataGrid.Resources>
                                                <DataGrid.RowStyle>
                                                    <Style TargetType="DataGridRow">
                                                        <Setter Property="Background" Value="{Binding statusColor}" />
                                                    </Style>
                                                </DataGrid.RowStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Header="Tên nhà tài trợ" Width="200"  IsReadOnly="True" CanUserSort="True" SortMemberPath="DOIBONG.TEN">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate >
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Source="{Binding SUPPLIER.images, Converter={StaticResource ResourceKey=imageconvert } }" DockPanel.Dock="Left" Width="30" Height="30"></Image>
                                                                    <Separator Background="Transparent" Width="20" Foreground="Transparent" BorderBrush="Transparent" BorderThickness="0"></Separator>
                                                                    <TextBlock  Text="{Binding SUPPLIER.supplierName}" VerticalAlignment="Center"></TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn Header="Ngày bắt đầu" Width="155" Binding="{Binding startDate, StringFormat=d}" CanUserSort="True" SortMemberPath="startDate">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <DataGridTemplateColumn Header="Ngày kết thúc" Width="155" CanUserSort="True" SortMemberPath="endDate">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding endDate, StringFormat=d}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn Header="Thời hạn" Width="155" Binding="{Binding durationString}" CanUserSort="True" SortMemberPath="durationString">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />

                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                    <DataGridTextColumn Header="Trạng thái" Width="150" Binding="{Binding statusString}" CanUserSort="True" SortMemberPath="statusString">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Border>
                                    </StackPanel>

                                </Border>
                            </Grid>

                        </Grid>

                    </TabItem>
                    <TabItem x:Name="Focus" Header="Đang chờ"  FontWeight="Bold" Height="24" HorizontalAlignment="Right" GotFocus="Focus_GotFocus">
                        <Grid Background="#D0D6DB">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="26*"/>
                                <ColumnDefinition Width="579*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="White" Width="1050" CornerRadius="10" Margin="28,10,80,20" Padding="0 20 0 0" Grid.Column="1">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="Danh sách chờ" FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Button  x:Name="refreshWaitBtn"
                                             Background="#F0CF7A"
                                             Style="{StaticResource PrimaryButton}"
                                             Width="120"
                                             Margin="20 -40 0 0"
                                             RenderTransformOrigin="-0.35,0.314" Content="Update data"
                                             HorizontalAlignment="Left" Click="refreshWaitBtn_Click"
                                            
      />
                                    <Border  BorderBrush="Black" Background="#31AC4C" BorderThickness="3" CornerRadius="10" Margin="10" Padding="4 1.5 4 0">
                                        <DataGrid x:Name="DTG_wait" IsReadOnly="True"
                                               Height="320"
                                       d:ItemsSource="{d:SampleData ItemCount=10}"
                                               ItemsSource="{Binding SuppliersWaitConfirm,UpdateSourceTrigger=PropertyChanged,NotifyOnSourceUpdated=True }"
                                      Background="White" RenderTransformOrigin="0.494,0.52"
                                      CanUserAddRows="False" ScrollViewer.CanContentScroll="True"
                                      AutoGenerateColumns="False" VerticalAlignment="Top"
                                      ScrollViewer.VerticalScrollBarVisibility="Hidden" MouseDoubleClick="DTG_wait_MouseDoubleClick" >
                                            <DataGrid.Resources>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="Background" Value="#31AC4C"/>
                                                    <Setter Property="Height" Value="33"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                </Style>
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Tên nhà tài trợ" Width="250"  IsReadOnly="True">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate >
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                <Image Source="{Binding SUPPLIER.images, Converter={StaticResource ResourceKey=imageconvert } }" DockPanel.Dock="Left" Width="30" Height="30"></Image>
                                                                <Separator Background="Transparent" Width="20" Foreground="Transparent" BorderBrush="Transparent" BorderThickness="0"></Separator>
                                                                <TextBlock  Text="{Binding SUPPLIER.supplierName}" VerticalAlignment="Center"></TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTextColumn Header="Ngày bắt đầu" Width="155" Binding="{Binding startDate, StringFormat=d}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>

                                                <DataGridTemplateColumn Header="Ngày kết thúc" Width="155">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding endDate, StringFormat=d}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>

                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Thời hạn" Width="155" Binding="{Binding durationString}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTemplateColumn Width="auto"   IsReadOnly="True">

                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate >
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                <Button   Name="Cancel" Content="Hủy bỏ" Margin="0 0 15 0" Click="Cancel_Offer_Click">
                                                                </Button>
                                                                <Button  Style="{StaticResource MaterialDesignRaisedAccentButton}" Name="Confirm" Content="Xác nhận" Click="Confirm_Offer_Click" >
                                                                </Button>
                                                            </StackPanel>

                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>

                                                </DataGridTemplateColumn>

                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </StackPanel>

                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>


        </Grid>

    </Grid>
</UserControl>
